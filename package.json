{
  "name": "sky-serverless",
  "version": "0.3.7",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "default": "./dist/plugins/index.js"
    },
    "./plugins/doc": {
      "types": "./dist/plugins/doc/index.d.ts",
      "default": "./dist/plugins/doc/index.js"
    },
    "./plugins/auth": {
      "types": "./dist/plugins/auth/index.d.ts",
      "default": "./dist/plugins/auth/index.js"
    },
    "./plugins/data": {
      "types": "./dist/plugins/data/index.d.ts",
      "default": "./dist/plugins/data/index.js"
    },
    "./plugins/data/*": {
      "types": "./dist/plugins/data/*.d.ts",
      "default": "./dist/plugins/data/*.js"
    },
    "./package.json": {
      "default": "./package.json"
    }
  },
  "typesVersions": {
    "*": {
      "plugins": [
        "dist/plugins/index.d.ts"
      ],
      "plugins/auth": [
        "dist/plugins/auth/index.d.ts"
      ],
      "plugins/doc": [
        "dist/plugins/doc/index.d.ts"
      ],
      "plugins/data": [
        "dist/plugins/data/index.d.ts"
      ],
      "plugins/data/*": [
        "dist/plugins/data/*"
      ]
    }
  },
  "bin": {
    "sky": "bin/sky.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:core && npm run build:cli",
    "build:core": "tsc -p tsconfig.build.json",
    "build:cli": "tsc -p tsconfig.cli.json",
    "prepublishOnly": "npm run build",
    "dev": "ts-node --project tsconfig.json examples/sky-http-hello/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage:base": "vitest run --coverage",
    "coverage:plugins": "vitest run --coverage --coverage.include \"src/plugins/data/**\" --coverage.thresholds.perFile --coverage.thresholds.lines 100 --coverage.thresholds.branches 100 --coverage.thresholds.functions 100 --coverage.thresholds.statements 100",
    "test:coverage": "npm run coverage:base && npm run coverage:plugins",
    "bench:core": "ts-node --project tsconfig.json scripts/benchmark.ts",
    "examples": "docker compose -f docker-compose.mysql.yml -f docker-compose.mssql.yml -f docker-compose.redis.yml up -d && SKY_MYSQL_URI='mysql://sky:sky@localhost:3306/sky' SKY_MSSQL_CONN_STR='Server=localhost,1433;Database=master;User Id=sa;Password=SkyStrongPwd123!;Encrypt=true;TrustServerCertificate=true' SKY_REDIS_URI='redis://localhost:6379' npx ts-node --project tsconfig.json examples/sky-http-hello/server.ts"
  },
  "dependencies": {
    "chokidar": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.26",
    "@vitest/coverage-v8": "^4.0.15",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^4.0.15"
  },
  "optionalDependencies": {
    "ioredis": "^5.8.2",
    "mssql": "^12.2.0",
    "mysql2": "^3.11.3"
  }
}
